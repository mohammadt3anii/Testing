<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.rvnmrqz.firetrack.MainActivity_user">

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <!--REPORT LAYOUT-->
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/report_framelayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/initial_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <Button
                    android:id="@+id/btnReportFire"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorPrimary"
                    android:textColor="#ffffff"
                    android:text="Report"
                     />

                <Button
                       android:id="@+id/btnMyReports"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorPrimary"
                    android:text="My Reports"
                    android:textColor="#ffffff" />
            </LinearLayout>
        </LinearLayout>

        <!--FEED LAYOUT-->
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/news_framelayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

               <FrameLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">
                   <!--POST LIST LAYOUT-->
                   <LinearLayout
                       android:background="#d3d6db"
                       android:id="@+id/feed_postLayout"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent">
                           <LinearLayout
                               android:orientation="vertical"
                               android:layout_width="match_parent"
                               android:layout_height="match_parent">
                               <android.support.v4.widget.SwipeRefreshLayout
                                   android:id="@+id/feed_swipe_refresh"
                                   android:layout_width="match_parent"
                                   android:layout_height="match_parent">
                                   <ListView
                                       android:divider="@null"
                                       android:dividerHeight="0dp"
                                       android:id="@+id/listview_feed"
                                       android:layout_width="match_parent"
                                       android:layout_height="match_parent">
                                   </ListView>
                               </android.support.v4.widget.SwipeRefreshLayout>
                           </LinearLayout>
                   </LinearLayout>
                   <!--MESSAGE LAYOUT-->
                   <LinearLayout
                       android:id="@+id/feed_messageLayout"
                       android:orientation="vertical"
                       android:gravity="center"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent">
                       <TextView
                           android:id="@+id/feed_messageTextview"
                           android:textSize="25sp"
                           android:textStyle="bold"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content" />
                       <Button
                           android:text="Refresh"
                           android:textColor="#fff"
                           android:backgroundTint="@color/colorPrimary"
                           android:id="@+id/feed_messageButton"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content" />
                   </LinearLayout>
                   <!--PROGRESS LAYOUT-->
                   <LinearLayout
                       android:orientation="vertical"
                       android:gravity="center"
                       android:id="@+id/feed_loadingLayout"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent">
                       <ProgressBar
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content" />
                       <TextView
                           android:text="Loading"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content" />
                   </LinearLayout>
               </FrameLayout>
        </LinearLayout>

        <!--NOTIF LAYOUT-->
        <LinearLayout
            android:visibility="gone"
            android:orientation="vertical"
            android:id="@+id/notification_framelayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           >
            <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/notif_swipe_refresh_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ListView
                    android:id="@+id/notif_listview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </ListView>
            </android.support.v4.widget.SwipeRefreshLayout>
        </LinearLayout>

    </LinearLayout>

    <android.support.design.widget.BottomNavigationView
        android:windowSoftInputMode="adjustPan"
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/navigation" />

</LinearLayout>
