<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">
    <ImageView
        android:layout_margin="4dp"
        android:src="@drawable/fire_picture_sample"
        android:scaleType="centerCrop"
        android:id="@+id/report_image"
        android:layout_alignParentLeft="true"
        android:layout_width="80dp"
        android:layout_height="100dp" />
    <LinearLayout
        android:layout_toRightOf="@id/report_image"
        android:paddingLeft="8dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/report_datetime"
            android:text="12-04-2017 06:56:32"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Coordinates: "
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/report_coordinates"
                android:text="120.4455231,14.5522680"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Status: "
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="On going"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Alarm Level: "
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="Unknown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:text="Additional Information:"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <com.ms.square.android.expandabletextview.ExpandableTextView
            android:id="@+id/notif_message"
            app:maxCollapsedLines="1"
            app:animDuration="200"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--The ID's name is important and should never be changed, it will crash-->
            <TextView
                android:id="@+id/expandable_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="14sp"
                />
            <ImageButton
                android:id="@+id/expand_collapse"
                android:layout_gravity="right|bottom"
                android:padding="4dp"
                android:background="@android:color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </com.ms.square.android.expandabletextview.ExpandableTextView>
    </LinearLayout>
</RelativeLayout>
